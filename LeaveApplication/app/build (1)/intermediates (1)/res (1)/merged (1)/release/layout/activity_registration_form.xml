<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shashimishra.leaveapplication.RegistrationForm"
    android:background="@drawable/ss">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/idScroll"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/idMainLayout"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/idHeaderlayout">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="?attr/homeAsUpIndicator"
                android:id="@+id/idBackReg"
                android:layout_weight="0.06"
                android:background="@android:color/transparent" />

            <TextView
                android:text="Registration Form"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/IdRegHeader"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="0.06"
            android:id="@+id/idblank1"
            android:layout_height="30dp"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:id="@+id/idFormLayout"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/idUserIdContainer"
                android:layout_height="52dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/iduseridLyout">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="UserID"
                        android:textColor="@android:color/white"
                        android:id="@+id/idueseridEditText" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/idblank2"
                android:layout_height="30dp"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/Idusernamecontainer">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/idusernameInputLayout">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Username"
                        android:textColor="@android:color/white"
                        android:id="@+id/idusernameField" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/idBlank3"
                android:layout_height="30dp"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/idEmailLayout">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/idEmailTextLayout">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="email"
                        android:textColor="@android:color/white"
                        android:id="@+id/idemailIdField" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/idBlank4"
                android:layout_height="30dp">

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/idPhnoLayout"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/idPhoneLayout">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="Phone"
                        android:textColor="@android:color/white"
                        android:id="@+id/idPhoneField" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/idButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="187dp">

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:id="@+id/CancelButton"
                android:background="@android:color/transparent"
                android:textSize="24sp"
                android:layout_weight="2.00" />

            <Button
                android:text="Go"
                android:layout_width="98dp"
                android:layout_height="209dp"
                android:id="@+id/GoButton"
                android:background="@android:color/transparent"
                android:textSize="24sp"
                android:layout_weight="1.78" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>
